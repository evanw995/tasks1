
<h2>User Profile</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>ID:</strong>
    <%= @user.id %>
  </li>

</ul>
<%= if @current_user == @user do %>
  <span><%= link "Edit Name", to: user_path(@conn, :edit, @user) %></span>
<% end %>

<br>
<%= if !@current_user do %>
  <span><%= link "Go to Log in Page", to: "/" %></span>
<% end %>
